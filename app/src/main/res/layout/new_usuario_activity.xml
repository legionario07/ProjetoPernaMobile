<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inp_layout_usuario_usuario"
        android:layout_below="@id/inp_usuario_usuario"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            style="@style/cadastros"
            android:inputType="text"
            android:hint="@string/usuario"
            android:id="@+id/inp_usuario_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inp_layout_senha_usuario"
        android:layout_below="@id/inp_senha_usuario"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            style="@style/cadastros"
            android:inputType="textPassword"
            android:hint="@string/senha"
            android:id="@+id/inp_senha_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </android.support.design.widget.TextInputLayout>


    <Spinner
        android:id="@+id/spnPerfil"
        style="@style/cadastros.spinner"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>




    <ImageButton
        android:src="@drawable/ic_save_black_24dp"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>